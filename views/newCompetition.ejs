<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <% include ./partials/header.ejs %>

    <h3>Start New Competition</h3>
    <form action='/competitions/new' method = 'POST'>
      <div class='input-field'>
        <label for='title'>Title</label>
        <input type = 'text' name='title' autocomplete='off'/>
      </div>
      <div class='input-field'>
        <label for='duration'>Length(days)</label>
        <input type = 'number' name='duration' />
      </div>
      <div class='input-field'>
        <label for='bet_min'>Minimum bet</label>
        <input type = 'number' name='bet_min' />
      </div>
      <div class='input-field'>
        <label for='description'>Description</label>
        <textarea class='materialize-textarea' name ='description'></textarea>
      </div>
      <div class='input-field'>
        <p>
          <label>
            <input name="isPublic" type="radio" checked />
            <span>Public</span>
          </label>
        </p>
        <p>
          <label>
            <input name="isPublic" type="radio" />
            <span>Private</span>
          </label>
        </p>
      </div>
    </form>
  </body>
</html>
